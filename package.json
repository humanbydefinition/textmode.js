{
  "name": "textmode.js",
  "version": "0.4.0",
  "description": "textmode.js is a lightweight creative coding library for creating real-time ASCII art on the web.",
  "type": "module",
  "types": "./dist/types/index.d.ts",
  "main": "./dist/textmode.umd.js",
  "module": "./dist/textmode.esm.js",
  "exports": {
    ".": {
      "types": "./dist/types/index.d.ts",
      "import": "./dist/textmode.esm.js",
      "require": "./dist/textmode.umd.js"
    },
    "./min": {
      "types": "./dist/types/index.d.ts",
      "import": "./dist/textmode.esm.min.js",
      "require": "./dist/textmode.umd.min.js"
    }
  },
  "scripts": {
    "dev": "vite --port 5177 --host",
    "build": "vite build && vite build --mode min && tsc",
    "build:full": "vite build && tsc",
    "build:min": "vite build --mode min && tsc",
    "build:docs": "typedoc",
    "dev:docs": "typedoc --watch",
    "preview": "vite preview",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:run": "vitest run",
    "test:coverage": "vitest --coverage"
  },
  "devDependencies": {
    "@mapwhit/glsl-minify": "^1.0.0",
    "@rollup/plugin-terser": "^0.4.4",
    "@types/jsdom": "^21.1.7",
    "@types/node": "^24.0.13",
    "@vitest/ui": "^3.1.2",
    "jsdom": "^26.1.0",
    "terser": "^5.43.1",
    "tslib": "^2.8.1",
    "typedoc": "^0.28.13",
    "typedoc-plugin-markdown": "^4.7.0",
    "typescript": "^5.9.2",
    "vite": "^6.3.4",
    "vite-plugin-glsl": "^1.5.1",
    "vitest": "^3.1.2"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/humanbydefinition/textmode.js.git"
  },
  "keywords": [
    "ascii",
    "petscii",
    "textmode",
    "canvas",
    "webgl",
    "creative-coding",
    "art",
    "design",
    "graphics"
  ],
  "author": "humanbydefinition",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/humanbydefinition/textmode.js/issues"
  },
  "homepage": "https://code.textmode.art",
  "files": [
    "dist"
  ]
}
